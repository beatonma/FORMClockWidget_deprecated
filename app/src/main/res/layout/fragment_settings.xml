<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:padding="16dp"
        android:clipToPadding="false"
        android:id="@+id/container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@color/White"
            android:paddingBottom="8dp"
            android:id="@+id/colors_container"
            android:clipToPadding="false">

            <FrameLayout
                android:layout_width="@dimen/button_color_background_size"
                android:layout_height="@dimen/button_color_background_size"
                android:layout_margin="4dp"
                android:background="@color/Primary">
                <ImageButton
                    android:layout_width="@dimen/button_color_size"
                    android:layout_height="@dimen/button_color_size"
                    android:layout_gravity="center"
                    android:id="@+id/button_color1"
                    android:elevation="4dp"
                    android:stateListAnimator="@anim/raise"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/button_color_background_size"
                android:layout_height="@dimen/button_color_background_size"
                android:layout_margin="4dp"
                android:background="@color/Primary">
                <ImageButton
                    android:layout_width="@dimen/button_color_size"
                    android:layout_height="@dimen/button_color_size"
                    android:layout_gravity="center"
                    android:id="@+id/button_color2"
                    android:elevation="4dp"
                    android:stateListAnimator="@anim/raise"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/button_color_background_size"
                android:layout_height="@dimen/button_color_background_size"
                android:layout_margin="4dp"
                android:background="@color/Primary">
                <ImageButton
                    android:layout_width="@dimen/button_color_size"
                    android:layout_height="@dimen/button_color_size"
                    android:layout_gravity="center"
                    android:id="@+id/button_color3"
                    android:elevation="4dp"
                    android:stateListAnimator="@anim/raise"/>
            </FrameLayout>
        </LinearLayout>

        <!--<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/prefs_container"
            android:clipToPadding="false"
            android:clipChildren="false">
            <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:name="com.beatonma.formclockwidget.PrefsFragment"
                android:id="@+id/prefs_fragment" />
        </FrameLayout>-->

    </RelativeLayout>
</ScrollView>