    </style>

    <style name="Green" parent="AppTheme">
        <item name="android:colorControlActivated">@color/Green500</item>
    </style>

    <style name="Amber" parent="AppTheme">
        <item name="android:colorControlActivated">@color/Amber500</item>
    </style>

    <style name="DeepOrange" parent="AppTheme">
        <item name="android:colorControlActivated">@color/DeepOrange500</item>
    </style>

    <style name="Brown" parent="AppTheme">
        <item name="android:colorControlActivated">@color/Brown500</item>
    </style>

    <style name="Grey" parent="AppTheme">
        <item name="android:colorControlActivated">@color/Grey500</item>
    </style>
</resources>